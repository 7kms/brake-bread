<import src="../public/template.wxml"></import>
<template is="loading" wx:if="{{loading}}"/>
<view class="bake-content">
    <view class="bake-cover">
        <image src="{{info.coverUrl}}" mode="aspectFill"></image>
    </view>
    <view class="desc bake-item">
        <view class="bake-name topic">小烘焙</view>
        <view class="bake-price">￥315.00</view>
        <view class="bake-text">
            <text class="text-dfn">库存</text>
            <text class="text-desc">100</text>
        </view>
        <view class="bake-text">
            <text class="text-dfn">运费</text>
            <text class="text-desc">3000</text>
        </view>
        <view class="bake-text">
            <text class="text-dfn">描述</text>
            <text class="text-desc">味道真的很好啊味道真的很好啊味道真的很好啊味道真的很好啊味道真的很好啊</text>
        </view>
    </view>
    <view class="comment bake-item">
        <view class="topic">宝贝评价</view>
        <view class="label-list">
            <view class="label">有图(0)</view>
            <view class="label">好评(0)</view>
            <view class="label">中评(0)</view>
            <view class="label">差评(0)</view>
        </view>
    </view>
    <view class="pic-list bake-item">
        <image src="{{info.coverUrl}}"></image>
        <image src="{{info.coverUrl}}"></image>
    </view>
    <view class="bake-operate">
        <button class="operate-buy">立即购买</button>
        <button class="operate-car">加入购物车</button>
    </view>
</view>
<view class="bake-select-wrap">
    <view class="bake-select">
        <view class="select-item item-info">
            <image  class="select-avatar" src="{{info.coverUrl}}" mode="aspectFill" width="50" height="50"></image>
            <view class="info-dfn">
                <text class="select-name">小烘焙</text>
                <text class="select-price">￥315.00</text>
            </view>
        </view>
        <view class="select-item">
            <view>数量</view>
            <view>
                <text>库存 (99)</text>
                <view>
                    <text>3</text>
                </view>
            </view>
        </view>
        <view class="select-item select-operate">
            <button>下一步</button>
        </view>
    </view>
</view>
