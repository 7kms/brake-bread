
.pro-filter{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #999;
    display: flex;
}
.filter-item{
    flex: 1;
}
.item-active{
    color:#2c2c2c;
    border-bottom: 1rpx solid #2c2c2c;
}

/* container */
.pro-container{
    width: 100%;
    height: 200rpx;
    flex: 1;
}
.pro-cover{
    height: 350rpx;
    margin-bottom: 15rpx;
}
.pro-cover .image-cover{
    width: 100%;
    height: 100%;
}
.pro-list{
    display: flex;
    margin-top: -10rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}
.pro-item{
    width: 50%;
    margin-bottom: 10rpx;
    background-color: #fff;
}
.item-pic{
    margin: 10rpx;
    padding-top: 100%;
    background-position: center;
    background-size: cover;
    background-color: #ccc;
}
.item-desc{
    margin: 0 10rpx;
    font-size: 28rpx;
}
.item-name{
    color: #666;
    font-size: 30rpx;
}
.item-price{
    color: orange;
    margin-right:10rpx;
}
.item-sales{
    color: #999;
    font-size: 24rpx;
}
.item-info{
    display: flex;
    align-items: center;
}